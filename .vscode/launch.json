    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "runtimeExecutable": "/opt/google/chrome-unstable/google-chrome-unstable",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
    ]
}